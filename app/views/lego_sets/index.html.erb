<%- model_class = LegoSet -%>
<div class="container">
<div class="page-header">
  <h1>Sets</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:set) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:link) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:theme) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @lego_sets.each do |lego_set| %>
      <tr>
        <td><%= lego_set.set %></td>
        <td><%= lego_set.name %></td>
        <td><%= link_to lego_set.link, lego_set.link.to_s %></td>
        <td><%= lego_set.description %></td>
        <td><%= lego_set.theme %></td>
        <td>
          <%= link_to lego_set_path(lego_set), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to lego_set_path(lego_set), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
    </div>
  </tbody>
</table>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_lego_set_path,
            :class => 'btn btn-primary' %>
</div>

